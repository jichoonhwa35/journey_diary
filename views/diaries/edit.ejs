
<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1 style="text-align:center"> Edit <%= diary.name %></h1>
    </div>
    <div class="col-lg-4 col-xs-12">
        <form action="/diaries/<%= diary._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="diary[name]" value="<%=diary.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="diary[image]" value="<%=diary.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="diary[location]" value="<%=diary.location %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="diary[description]" value="<%=diary.description %>"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/diaries">Go back</a>
    </div>
</div>
<% include ../partials/footer %>