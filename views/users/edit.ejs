
<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1><%=user.firstName + " " +user.lastName %></h1>
    </div>
    <div class="col-lg-4 col-xs-12">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" value="<%=user.username %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[password]" value="<%=user.password %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[firstName]" value="<%=user.firstName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[lastName]" value="<%=user.lastName %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[email]" value="<%=user.email %>">
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <div class="mb-5">
            <a href="/diaries">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>